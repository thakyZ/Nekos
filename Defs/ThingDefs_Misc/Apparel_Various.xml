    <apparel>
      <bodyPartGroups>
        <li>Neck</li>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/NekoLightExoskeleton/NekoExoskeleton</wornGraphicPath>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <tags>
        <li>NekoMilitary</li>
      </tags>
      <defaultOutfitTags>
        <li>NekoSoldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
</Defs>
