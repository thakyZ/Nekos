<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <ThingDef Name="OApparelBase" Abstract="True">
    <thingClass>Apparel</thingClass>
    <category>Item</category>
    <selectable>True</selectable>
    <pathCost>10</pathCost>
    <useHitPoints>True</useHitPoints>
    <techLevel>Ultra</techLevel>
    <graphicData>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>2</DeteriorationRate>
      <Beauty>-4</Beauty>
      <SellPriceFactor>0.70</SellPriceFactor>
    </statBases>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
      <li>
        <compClass>CompColorable</compClass>
      </li>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
  </ThingDef>

  <ThingDef Name="OArmorMakeableBase" ParentName="OApparelBase" Abstract="True">
    <recipeMaker>
      <workSpeedStat>SmithingSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Machining</soundWorking>
      <recipeUsers>
        <li>TableNekoMachining</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <disallowedThingDefs>
          <li>Gold</li>
          <li>Silver</li>
          <li>Plasteel</li>
          <li>Jade</li>
          <li>Uranium</li>
        </disallowedThingDefs>
      </defaultIngredientFilter>
    </recipeMaker>
  </ThingDef>

  <ThingDef ParentName="OArmorMakeableBase">
    <defName>Apparel_NekoSacriSuit</defName>
    <label>neko S.A.C.R.I suit</label>
    <description>This special protective suit is the most popular choice among the Neko scientists and hazardous areas explorers. Made of special coating with high-tech fibers, it gives the wearer an exceptionally high protection against many negative
      impact excluding kinetic damage. Soldered inside the armor vest partly solves this problem. Its name was received because of the new system S.A.C.R.I. (System of abnormal, chemical, radiation isolation.).</description>
    <techLevel>Ultra</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>NPoweredArmor</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/NekoSacriSuit/NekoSacriSuit</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>100000</WorkToMake>
      <MaxHitPoints>380</MaxHitPoints>
      <MarketValue>3400</MarketValue>
      <Mass>4</Mass>
      <ArmorRating_Blunt>0.25</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.35</ArmorRating_Sharp>
      <ArmorRating_Heat>0.95</ArmorRating_Heat>
      <Insulation_Cold>120</Insulation_Cold>
      <Insulation_Heat>75</Insulation_Heat>
    </statBases>
    <equippedStatOffsets>
      <ToxicSensitivity>-0.5</ToxicSensitivity>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <costList>
      <ComponentSpacer>4</ComponentSpacer>
      <ComponentIndustrial>4</ComponentIndustrial>
      <Plasteel>50</Plasteel>
      <Steel>50</Steel>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>Neck</li>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/NekoSacriSuit/NekoSacriSuit</wornGraphicPath>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <tags>
        <li>Neko</li>
      </tags>
      <defaultOutfitTags>
        <li>NekoScientist</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

  <ThingDef ParentName="OArmorMakeableBase">
    <defName>Apparel_NekoArmor</defName>
    <label>neko exoskeletal armor</label>
    <description>Exoskeletal armor usually used by assault troops from The Neko Empire.\n\nSlim and advanced, and the advanced servo-motors greatly increase the wearer's load bearing capacity and assist in weapon-handling.</description>
    <techLevel>Ultra</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>NPoweredArmor</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/NekoPoweredExoskeleton/NekoArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>90000</WorkToMake>
      <MaxHitPoints>400</MaxHitPoints>
      <MarketValue>5000</MarketValue>
      <Mass>10</Mass>
      <ArmorRating_Blunt>0.60</ArmorRating_Blunt>
      <ArmorRating_Sharp>1.25</ArmorRating_Sharp>
      <ArmorRating_Heat>1.00</ArmorRating_Heat>
      <Insulation_Cold>45</Insulation_Cold>
      <Insulation_Heat>25</Insulation_Heat>
    </statBases>
    <equippedStatOffsets>
      <ShootingAccuracyPawn>1</ShootingAccuracyPawn>
      <CarryingCapacity>50</CarryingCapacity>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <costList>
      <ComponentSpacer>5</ComponentSpacer>
      <Plasteel>135</Plasteel>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>Neck</li>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/NekoPoweredExoskeleton/NekoArmor</wornGraphicPath>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <tags>
        <li>NekoMilitary</li>
      </tags>
      <defaultOutfitTags>
        <li>NekoSoldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

  <ThingDef ParentName="OArmorMakeableBase">
    <defName>Apparel_LightNekoArmor</defName>
    <label>neko light exoskeletal armor</label>
    <description>Exoskeletal armor usually used by assault troops from The Neko Empire.\n\nSlim and advanced, and the advanced servo-motors greatly increase the wearer's load bearing capacity and assist in weapon-handling. This version is lightly armored
      to reduce weight and cost.</description>
    <techLevel>Ultra</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>NPoweredArmor</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/NekoLightExoskeleton/NekoExoskeleton</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>60000</WorkToMake>
      <MaxHitPoints>250</MaxHitPoints>
      <MarketValue>3500</MarketValue>
      <Mass>7</Mass>
      <ArmorRating_Blunt>0.40</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.70</ArmorRating_Sharp>
      <ArmorRating_Heat>0.60</ArmorRating_Heat>
      <Insulation_Cold>10</Insulation_Cold>
      <Insulation_Heat>10</Insulation_Heat>
    </statBases>
    <equippedStatOffsets>
      <ShootingAccuracyPawn>1</ShootingAccuracyPawn>
      <CarryingCapacity>50</CarryingCapacity>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <costList>
      <ComponentSpacer>2</ComponentSpacer>
      <Plasteel>50</Plasteel>
