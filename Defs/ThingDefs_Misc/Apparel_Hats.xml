<Defs>
  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>Apparel_NekoTier1AHelmet</defName>
    <label>Active Neko Helmet</label>
    <description>This Neko Helmet is primarily worn by active Nekos in combat and are made specially designed with mobility in mind.</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>NPoweredArmor</researchPrerequisite>
      <recipeUsers>
        <li>TableNekoMachining</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/NekoTier1Active/nekotier1ahat</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>14000</WorkToMake>
      <MaxHitPoints>220</MaxHitPoints>
      <MarketValue>1850</MarketValue>
      <Mass>1.5</Mass>
      <ArmorRating_Blunt>0.25</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.3</ArmorRating_Sharp>
      <ArmorRating_Heat>0.78</ArmorRating_Heat>
      <Insulation_Cold>40</Insulation_Cold>
      <Insulation_Heat>30</Insulation_Heat>
    </statBases>
    <equippedStatOffsets>
      <ShootingAccuracyPawn>0.5</ShootingAccuracyPawn>
      <AimingDelayFactor>-0.05</AimingDelayFactor>
      <ToxicSensitivity>-0.50</ToxicSensitivity>
      <PsychicSensitivity>-1</PsychicSensitivity>
    </equippedStatOffsets>
    <costList>
      <ComponentSpacer>1</ComponentSpacer>
      <ComponentIndustrial>4</ComponentIndustrial>
      <Plasteel>10</Plasteel>
      <Steel>10</Steel>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/NekoTier1Active/nekotier1ahat</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>Neko</li>
      </tags>
      <defaultOutfitTags>
        <li>NekoScientist</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

